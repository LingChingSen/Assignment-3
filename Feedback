    private void jButton1MouseClicked(java.awt.event.MouseEvent evt) {                                      

     String str = tfFeed.getText();
    if(str.equals("") || str.equalsIgnoreCase("Type Here")){
     tfFeed.setText("Type Here");
    }else{
        listModel.addElement(str);
        jList1.setModel(listModel);
        
    }
        // TODO add your handling code here:
    }                                     

    private void jButton2MouseClicked(java.awt.event.MouseEvent evt) {                                      
    listModel.removeAllElements();   
    jList1.setModel(listModel);// TODO add your handling code here:
   
    }                                     

    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    int val = jList1.getModel().getSize();
        PrintWriter writer = null;
        try {
            writer = new PrintWriter("/Users/user/Desktop/list.txt");
            writer.println(val);
            for(int i=0;i<val;i++){
                writer.println(jList1.getModel().getElementAt(i));
            }
        } catch (Exception e) {
          System.out.println(""+e);
        }finally{
            writer.close();
        }
         cfmFeed cf = new cfmFeed();
               cf.setVisible(true);
               cf.pack();
               cf.setLocationRelativeTo(null);
               cf.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
               this.dispose();// TODO add your handling code here:
    }                                        

    private void jButton4MouseClicked(java.awt.event.MouseEvent evt) {                                      
     MainMenu mm = new MainMenu();
               mm.setVisible(true);
               mm.pack();
               mm.setLocationRelativeTo(null);
               mm.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
               this.dispose();
    }                                     

