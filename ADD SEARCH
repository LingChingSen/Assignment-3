    private void jButton1ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    String planename = jTextField1.getText();
    double planeprice = Double.parseDouble(jTextField2.getText());
    String paymentmethod = jComboBox1.getSelectedItem().toString();
    airplanelist.add(new Airplane(planename,planeprice,paymentmethod));
    dtm.setRowCount(0);
    for(int i = 0; i < airplanelist.size(); i++){
    Object[]objs = {airplanelist.get(i).planename,airplanelist.get(i).planeprice,airplanelist.get(i).paymentmethod};
    dtm.addRow(objs);
    
    }
      clearField();// TODO add your handling code here:
    }                                        
     private void clearField(){
        jTextField1.requestFocus();
        jTextField1.setText("");
        jTextField2.setText("");
        jComboBox1.setSelectedIndex(0);
        
    }
    private void jButton2ActionPerformed(java.awt.event.ActionEvent evt) {                                         
     int dialogButton = JOptionPane.YES_NO_OPTION;
    int dialogResult = JOptionPane.showConfirmDialog(this,"Delete this data","Delete",dialogButton);
    if(dialogResult == 0){
        dtm.removeRow(row);
        airplanelist.remove(row);
        dtm.setRowCount(0);
        for(int i=0; i< airplanelist.size(); i++){
            Object[]objs = {airplanelist.get(i).planename,airplanelist.get(i).planeprice,airplanelist.get(i).paymentmethod};
            dtm.addRow(objs);
           
        }
        clearField();
    }else{
        
    }
    
                                                  // TODO add your handling code here:
    }                                        
    
    private void jButton3ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    String editplanename = jTextField1.getText();
    double editplaneprice = Double.parseDouble(jTextField2.getText());
    String editpaymentmethod = jComboBox1.getSelectedItem().toString();
    airplanelist.get(row).planename = editplanename;
    airplanelist.get(row).planeprice = editplaneprice;
    airplanelist.get(row).paymentmethod = editpaymentmethod;
    dtm.setRowCount(0);
    for(int i=0; i< airplanelist.size(); i++){
            Object[]objs = {airplanelist.get(i).planename,airplanelist.get(i).planeprice,airplanelist.get(i).paymentmethod};
            dtm.addRow(objs);
           
        }
    
    // TODO add your handling code here:
    }                                        

    private void jTable1MouseClicked(java.awt.event.MouseEvent evt) {                                     
    row = jTable1.getSelectedRow();
    col = jTable1.getComponentCount();
System.out.println(row +"+"+col);
jTextField1.setText(dtm.getValueAt(row, 0).toString());
jTextField2.setText(dtm.getValueAt(row, 1).toString());
String location  = dtm.getValueAt(row,2).toString();
for(int i=0; i<(jComboBox1.getItemCount());i++){
   if(jComboBox1.getItemAt(i).equalsIgnoreCase(location)){
      jComboBox1.setSelectedIndex(i); 
   }
}

// TODO add your handling code here:
    }                                    

    private void jButton4ActionPerformed(java.awt.event.ActionEvent evt) {                                         
    String input = JOptionPane.showInputDialog(this,"Search plane name");
    for(int i=0; i<airplanelist.size();i++){
     if(airplanelist.get(i).planename.equalsIgnoreCase(input)){
         JOptionPane.showMessageDialog(jButton4,"Found!","Search Plane",2);
         jTextField1.setText(airplanelist.get(i).planename);
         jTextField2.setText(String.valueOf(airplanelist.get(i).planeprice));
         String location = airplanelist.get(i).paymentmethod;
          for(int j=0;j<(jComboBox1.getItemCount());j++){
              if(jComboBox1.getItemAt(i).equalsIgnoreCase(location)){
                  jComboBox1.setSelectedIndex(i);
              }
          }
          return;
     }
    }
 JOptionPane.showMessageDialog(jButton4,"Not Found!","Search Plane", 2);// TODO add your handling code here:
    }                                        

    private void jButton5MouseClicked(java.awt.event.MouseEvent evt) {                                      
    AddAddress ad= new AddAddress();
    ad.setVisible(true);
    ad.pack();
    ad.setLocationRelativeTo(null);
    ad.setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE); 
    this.dispose();// TODO add your handling code here:        // TODO add your handling code here:
    }                                     

