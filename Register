    void creatFolder(){
        if(!f.exists()){
            f.mkdirs();
        }
    }
    void readFile(){
        try {
            FileReader fr = new FileReader(f+"\\loginInfo.txt");
            System.out.println("file exists! ");
        } catch (FileNotFoundException ex) {
            try {
                FileWriter fw = new FileWriter(f+"\\loginInfo.txt");
                System.out.println("File Created!");
            } catch (IOException ex1) {
                Logger.getLogger(Register.class.getName()).log(Level.SEVERE, null, ex1);
            }
        }
        
    }
    
    void addData(String usr,String pswd, String id,String LN){
        try {
            RandomAccessFile raf = new RandomAccessFile(f+"\\loginInfo.txt","rw");
          for(int i=0;i<ln;i++){
              raf.readLine();
          }
          if(ln>0){
             raf.writeBytes("\r\n");
             raf.writeBytes("\r\n");
          }
             raf.writeBytes("Username:"+usr+"\r\n");
              raf.writeBytes("Password:"+pswd+"\r\n");
               raf.writeBytes("ID:"+id+"\r\n");
                raf.writeBytes("License Number:"+LN);
                
        } catch (FileNotFoundException ex) {
            Logger.getLogger(Register.class.getName()).log(Level.SEVERE, null, ex);
        } catch (IOException ex) {
            Logger.getLogger(Register.class.getName()).log(Level.SEVERE, null, ex);
        }
    }
     void countLines (){
         try {  
             ln=0;
             RandomAccessFile raf = new RandomAccessFile(f+"\\loginInfo.txt","rw");
             for(int i=0;raf.readLine()!=null;i++){
                ln++;
             }
             System.out.println("number of lines:"+ln);
         } catch (FileNotFoundException ex) {
             Logger.getLogger(MainUI.class.getName()).log(Level.SEVERE, null, ex);
         } catch (IOException ex) {
             Logger.getLogger(MainUI.class.getName()).log(Level.SEVERE, null, ex);
         }
    }
   void check (){
      String ID = tfid.getText().toString();
       String PilotName = tfusr.getText().toString();
        String Password = tfpswd.getText().toString();
        String License = tfLN.getText().toString();
     if( ID.equals("")|| PilotName.equals("")|| Password.equals("")|| License.equals("")){
            JOptionPane.showMessageDialog(null,"Please insert all data");  
     }else{
       
      
          JOptionPane.showMessageDialog(null,"Successfully Registered!");
     } 
   }
   
